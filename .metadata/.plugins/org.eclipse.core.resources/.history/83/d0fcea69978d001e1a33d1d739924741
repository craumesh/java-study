class SingleT {
	String msg;
	int count;
	public SingleT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	public void run() {
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + count);
		}
	}
}

class MultiT extends MultiThread {
	String msg;
	int count;
	public MultiT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + i);
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}	
}

class FileTransfer {
	String fileName;
	int count;
	public FileTransfer(String fileName, int count) {
		super();
		this.fileName = fileName;
		this.count = count;
	}
	
	public void run() {
		for(int i = 0; i < count; i++) {
			System.out.println(fileName + " : " + count);
		}
	}
}

class FileTransferMultiThread extends MultiThread {
	String fileName;
	int count;
	public FileTransferMultiThread(String fileName, int count) {
		super();
		this.fileName = fileName;
		this.count = count;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(fileName + " : " + i);
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}	
}

class ReceiveMessageMultiThread extends Object implements Runnable {
	String msg;
	int count;	

	public ReceiveMessageMultiThread(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(fileName + " : " + i);
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
}