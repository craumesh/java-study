package thread;

public class Test2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SingleT st1 = new SingleT("혼자왔니?", 10);
		SingleT st2 = new SingleT("어 싱글이야", 10);
		MultiT mt1 = new MultiT("CPU 사줘요 1", 10);
		MultiT mt2 = new MultiT("CPU 사줘요 2", 10);
		MultiT mt3 = new MultiT("CPU 사줘요 3", 10);
		
		st1.run();
		st2.run();
		
		mt1.start();
		mt2.start();
		mt3.start();
		
	}
}

class SingleT {
	String msg;
	int count;
	public SingleT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	public void run() {
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + count);
		}
	}
}

class MultiT extends MultiThread {
	String msg;
	int count;
	public MultiT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + count);
			
			Thread.sleep(1000);
		}
	}	
}