interface Vehicle {
	void run();
}

class AnonymousClass {
	
	void method1(Vehicle vc) {};
	
	void method2() {
		method1(new Vehicle() {
			
			@Override
			public void run() {
				// TODO Auto-generated method stub
				
			}
		});
	}
	
	void method3() {
		Vehicle vc = new Vehicle() {		
			@Override
			public void run() {
				// TODO Auto-generated method stub
				System.out.println("자전거가 달립니다!");
			}
		};
		vc.run();
	}
	
	
	
	
}