package thread;

public class Test2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SingleT st1 = new SingleT("st1", 10);
		SingleT st2 = new SingleT("st2", 10);
		MultiT mt1 = new MultiT("mt1", 10);
		MultiT mt2 = new MultiT("mt2", 10);
		MultiT mt3 = new MultiT("mt3", 10);
		
		st1.run();
		st2.run();
		
		mt1.start();
		mt2.start();
		mt3.start();
		
	}
}

class SingleT {
	String msg;
	int count;
	public SingleT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	public void run() {
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + count);
		}
	}
}

class MultiT extends MultiThread {
	String msg;
	int count;
	public MultiT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + i);
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}	
}

class FileTransfer {
	String msg;
	int count;
	public SingleT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	public void run() {
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + count);
		}
	}
}

class MultiT extends MultiThread {
	String msg;
	int count;
	public MultiT(String msg, int count) {
		super();
		this.msg = msg;
		this.count = count;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i = 0; i < count; i++) {
			System.out.println(msg + " : " + i);
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}	
}